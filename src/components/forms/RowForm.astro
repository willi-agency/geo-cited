---
import { Icon } from 'astro-icon/components';
const uniqueId = `whatsapp-${Math.random().toString(36).substr(2, 9)}`;
const {
  variant = 'btn-primary-solid',
  size = 'btn-sm md:btn-md',
  extraClassesForm = '',
  extraClassesInput = '',
  idValidation,
} = Astro.props;
const validateId = idValidation || undefined;
---
<form class={`relative w-full ${extraClassesForm}`} data-form-id={validateId}>
  <label for={uniqueId} class="sr-only">WhatsApp</label>
    <input data-field="whatsapp" id={uniqueId} data-mask="(##) ####-#### || (##) #####-####" class={`relative bg-white w-full h-20 p-4 pr-24 m-0 rounded-2xl focus:outline-zinc-600 text-lg ${extraClassesInput}`} type="text" placeholder="Digite seu WhatsApp">
  <button type="button" data-mask-trigger class={`absolute top-2 right-2 btn w-[86px] md:w-32 h-16 ${variant} ${size}`}>
    <span class="w-fit md:w-16">An√°lise Gratuita</span>
    <Icon class="hidden md:flex" width={20} height={20} name="lucide:arrow-right"></Icon>
  </button>
</form>