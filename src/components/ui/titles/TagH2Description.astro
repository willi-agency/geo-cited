---
import type { FeatureSection } from "@/schemas/features";

export interface Props {
  section: FeatureSection;
}

const {
  variant = "white",
  tag,
  title,
  subtitle,
  description,
} = Astro.props.section;

const tagColor = variant === "white" ? "text-white bg-primary-700" : "text-primary-700 bg-white";
const textColor = variant === "white" ? "text-zinc-600" : "text-white/70";
const titleColor = variant === "white" ? "text-zinc-900" : "text-white";
---

<div class="flex flex-col items-center justify-center text-center py-20 px-4 md:px-8">
  <!-- TÍTULO -->
  {tag && (
    <span class={`w-fit text-sm px-5 py-1 rounded-full ${tagColor}`}>
      {tag}
    </span>
  )}
  <!-- TÍTULO -->
  {title && (
    <h2 class={`text-4xl md:text-6xl tracking-tight max-w-4xl fade-up ${titleColor}`}>
      {title}
    </h2>
  )}

  <!-- SUBTÍTULO -->
  {subtitle && (
    <p
      class={`mt-4 text-xl max-w-3xl fade-up ${textColor}`}
      data-delay-animation="200"
    >
      {subtitle}
    </p>
  )}

  <!-- DESCRIÇÃO -->
  {description && (
    <p
      class={`mt-4 text-lg max-w-4xl fade-up ${textColor}`}
      data-delay-animation="200"
    >
      {description}
    </p>
  )}
</div>
