---
import Layout from "../../layouts/Layout.astro";
import { API_URL_BLOG, API_KEY }from "../../config/site";
import "../../styles/dinamicPage.css";
import { generateJsonLdFromArticle } from "src/seo/jsonld/jsonLdFromArticle";
import type { Article } from "src/schemas/article";
import { Image } from 'astro:assets';

interface ApiResponseAll {
  data?: Article[];
  articles?: Article[];
}

interface ApiResponseSingle {
  data?: Article;
  article?: Article;
}

export async function getStaticPaths() {
  const perPage = 100;
  let page = 1;
  let totalPages = 1;
  let allArticles: Article[] = [];

  while (page <= totalPages) {
    const url = `${API_URL_BLOG}/blog/articles/all/${API_KEY}?perPage=${perPage}&page=${page}&sortBy=createdAt&sortOrder=desc`;

    const res = await fetch(url);
    if (!res.ok) {
      throw new Error(`Erro ao buscar artigos: ${res.status}`);
    }

    const response: ApiResponseAll & { pagination?: any } = await res.json();

    let articles: Article[] = [];

    if (Array.isArray(response)) {
      articles = response;
    } else if (response.data && Array.isArray(response.data)) {
      articles = response.data;
    } else if (response.articles && Array.isArray(response.articles)) {
      articles = response.articles;
    }

    allArticles = [...allArticles, ...articles];

    // Atualiza paginação
    if (response.pagination) {
      totalPages = response.pagination.totalPages;
    } else {
      // Garantia: se não houver paginação, sai no primeiro loop
      break;
    }

    page++;
  }

  console.log(`[BLOG] Total de artigos carregados: ${allArticles.length}`);

  return allArticles.map((item: Article) => ({
    params: { slug: item.slug },
  }));
}

const { slug } = Astro.params as { slug: string };
let article: Article | null = null;
let relatedArticles: Article[] = [];

try {
  // Busca o artigo principal
  const res = await fetch(`${API_URL_BLOG}/blog/articles/all/${API_KEY}/${slug}`);
  if (!res.ok) throw new Error(`Erro ao buscar artigo com slug: ${slug}`);
  
  const response: ApiResponseSingle | Article = await res.json();
  
  if ('title' in response && 'slug' in response) {
    article = response as Article;
  } else if ('data' in response && response.data) {
    article = Array.isArray(response.data) ? response.data[0] : response.data;
  } else if ('article' in response && response.article) {
    article = response.article;
  }

  // Busca artigos relacionados se encontrou o artigo
  if (article && article.categoryId) {
    try {
      const relatedUrl = `${API_URL_BLOG}/blog/articles/all/${API_KEY}?categoryId=${article.categoryId}&perPage=6&sortBy=createdAt&sortOrder=desc`;
      const relatedRes = await fetch(relatedUrl);
      
      if (relatedRes.ok) {
        const relatedResponse: ApiResponseAll = await relatedRes.json();
        
        let allRelated: Article[] = [];
        if (Array.isArray(relatedResponse)) {
          allRelated = relatedResponse;
        } else if (relatedResponse.data && Array.isArray(relatedResponse.data)) {
          allRelated = relatedResponse.data;
        } else if (relatedResponse.articles && Array.isArray(relatedResponse.articles)) {
          allRelated = relatedResponse.articles;
        }
        
        // Filtra para não incluir o artigo atual
        relatedArticles = allRelated.filter(a => a.slug !== article?.slug).slice(0, 6);
      }
    } catch (err) {
      console.error("Erro ao buscar artigos relacionados:", err);
    }
  }

  if (article) {
    console.log(`Article found: ${article.title}`);
    console.log(`Related articles: ${relatedArticles.length}`);
  }
} catch (err) {
  console.error("Erro ao buscar o artigo:", err);
}

// Função para extrair a categoria do taxonomies
const getCategory = (article: Article) => {
  return article.taxonomies?.find(t => t.type === 'category');
};

// Função para extrair as tags do taxonomies
const getTags = (article: Article) => {
  return article.taxonomies?.filter(t => t.type === 'tag') || [];
};
---

{
  article ? (
    <Layout
      title={article.title}
      description={article.description}
      ogImage={article.image}
      canonical={`https://geocited.com.br/blog/${article.slug}`}
      jsonLdCustom={[generateJsonLdFromArticle(article)]}
    >
      
    <div class="max-w-7xl mx-auto px-4 py-10 mt-20">
      <div class="grid grid-cols-1 gap-x-6 gap-y-10 lg:grid-cols-3">
        <!-- Conteúdo Principal -->
        <div class="flex flex-col gap-y-10 lg:gap-y-14 xl:gap-y-20 lg:col-span-2">
          <!-- Blog Post Details -->
          <div class="flex flex-col gap-6">
            <!-- Blog Post Text Area -->
            <article class="overflow-hidden bg-white">
              {article.image && (
                <div class="mb-7 block overflow-hidden rounded-[10px]">
                  <Image
                    width={900}
                    height={500}
                    src={article.image}
                    alt={article.title}
                    class="h-auto w-full scale-100 object-cover"
                  />
                </div>
              )}
              
              <!-- Blog Post Meta -->
              <ul class="flex flex-wrap items-center gap-6">
                {getCategory(article) && (
                  <li class="relative font-semibold after:absolute after:left-full after:top-1/2 after:h-[7px] after:w-[7px] after:-translate-y-1/2 after:translate-x-2 after:rounded-full after:bg-colorCodGray last:after:hidden">
                    <a href={`/blog/categoria/${getCategory(article)?.slug}`} class="hover:text-colorOrangyRed">
                      {getCategory(article)?.name}
                    </a>
                  </li>
                )}
                <li class="relative font-semibold after:absolute after:left-full after:top-1/2 after:h-[7px] after:w-[7px] after:-translate-y-1/2 after:translate-x-2 after:rounded-full after:bg-colorCodGray last:after:hidden">
                  <span class="text-gray-600">
                     {new Date(article.createdAt).toLocaleDateString("pt-BR", {
                      year: "numeric",
                      month: "long",
                      day: "numeric"
                    })}
                  </span>
                </li>
              </ul>
              
              <h1 class="mb-3 mt-5 text-3xl font-bold">{article.title}</h1>
              
              {article.description && (
                <p class="mb-7 text-gray-600 last:mb-0">{article.description}</p>
              )}

              <!-- Conteúdo do Artigo -->
              <div class="prose prose-lg max-w-none article-content">
                <Fragment set:html={article.content} />
              </div>
            </article>

            <!-- Tags -->
            {getTags(article).length > 0 && (
              <div class="flex flex-wrap items-center gap-2 pt-6 border-t border-gray-200">
                <span class="text-sm font-semibold text-gray-700">Tags:</span>
                {getTags(article).map((tag) => (
                  <a
                    href={`/blog/tag/${tag.slug}`}
                    class="btn btn-primary-solid btn-xs"
                  >
                    {tag.name}
                  </a>
                ))}
              </div>
            )}

            <!-- Horizontal Separator -->
            <div class="my-[30px] h-[1px] w-full bg-[#EAEDF0]"></div>

            <!-- Autor Info -->
            {article.author && (
              <div class="p-6 bg-gray-50 rounded-xl">
                <div class="flex items-start gap-4">
                  {article.author.image && (
                    <Image
                      width={80}
                      height={80}
                      src={article.author.image}
                      alt={article.author.name}
                      class="w-20 h-20 rounded-full object-cover"
                    />
                  )}
                  <div class="flex-1">
                    <h3 class="text-xl font-bold mb-2">Sobre o autor</h3>
                    <p class="font-semibold text-gray-800 mb-1">{article.author.name}</p>
                    {article.author.bio && (
                      <p class="text-gray-600 text-sm mb-2">{article.author.bio}</p>
                    )}
                    {article.author.profileUrl && (
                      <a
                        href={article.author.profileUrl}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="btn btn-dark-outline btn-sm"
                      >
                        Ver perfil
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                        </svg>
                      </a>
                    )}
                  </div>
                </div>
              </div>
            )}
          </div>
        </div>

        <!-- Sidebar -->
        <aside class="flex flex-col gap-y-[30px] lg:col-span-1">
          <!-- Artigos Relacionados -->
          {relatedArticles.length > 0 && (
            <div class="rounded-[10px] border border-[#EAEDF0] p-8">
              <div class="relative mb-[30px] inline-block pb-[10px] text-lg font-semibold after:absolute after:bottom-0 after:left-0 after:h-[2px] after:w-full after:bg-black">
                Artigos Relacionados
              </div>

              <ul class="flex flex-col gap-y-6">
                {relatedArticles.map((related) => (
                  <li class="group flex flex-col items-center gap-x-4 gap-y-4 sm:flex-row">
                    <a href={`/blog/${related.slug}`} class="inline-block h-[150px] w-full overflow-hidden rounded-[5px] sm:h-[100px] sm:w-[150px]">
                      {related.image ? (
                        <Image
                          width={300}
                          height={200}
                          src={related.image}
                          alt={related.title}
                          class="h-full w-full scale-100 object-cover transition-all duration-300 group-hover:scale-105"
                        />
                      ) : (
                        <div class="h-full w-full bg-gray-200 flex items-center justify-center">
                          <span class="text-gray-400 text-xs">Sem imagem</span>
                        </div>
                      )}
                    </a>
                    <div class="flex w-full flex-col gap-y-3 sm:w-auto sm:flex-1">
                      <a href={`/blog/${related.slug}`} class="flex items-center gap-[10px] text-sm hover:text-colorOrangyRed">
                        <div class="h-6 w-6">
                          <svg class="h-full w-full" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                          </svg>
                        </div>
                        {new Date(related.createdAt).toLocaleDateString("pt-BR")}
                      </a>
                      <a href={`/blog/${related.slug}`} class="text-base font-bold hover:text-colorOrangyRed line-clamp-2">
                        {related.title}
                      </a>
                    </div>
                  </li>
                ))}
              </ul>
            </div>
          )}

          <!-- Newsletter -->
          <div class="rounded-[10px] border border-[#EAEDF0] p-8">
            <div class="relative mb-[30px] inline-block pb-[10px] text-lg font-semibold after:absolute after:bottom-0 after:left-0 after:h-[2px] after:w-full after:bg-black">
              Newsletter
            </div>

            <p class="mb-3 text-gray-600">
              Inscreva-se em nossa newsletter e receba as últimas notícias
            </p>

            <form action="#" method="post" class="flex flex-col">
              <input
                type="email"
                name="sidebar-newsletter"
                id="sidebar-newsletter"
                placeholder="Digite seu e-mail"
                class="h-[60px] w-full rounded-[50px] border border-colorCodGray bg-transparent px-10 py-[15px] text-lg outline-none transition-all placeholder:text-gray-500 focus:border-colorOrangyRed"
                required
              />
              <button
                type="submit"
                class="mt-5 block rounded-[50px] border-2 border-black bg-black py-4 text-white transition-all hover:border-colorOrangyRed hover:bg-colorOrangyRed"
              >
                Inscrever Agora
              </button>
            </form>
          </div>
        </aside>
      </div>
    </div>
      
    </Layout>
  ) : (
    <Layout
      title="Artigo não encontrado"
      description="O artigo solicitado não foi encontrado."
      jsonLdItems={["website"]}
    >
      <section class="max-w-4xl mx-auto px-4 py-20 text-center">
        <h1 class="text-3xl font-bold mb-4">Artigo não encontrado</h1>
        <p class="text-gray-600 mb-8">
          O conteúdo que você tentou acessar não existe ou foi removido.
        </p>
        <a
          href="/blog"
          class="inline-block px-6 py-3 bg-primary text-white rounded-lg hover:opacity-90 transition"
        >
          Voltar para o blog
        </a>
      </section>
    </Layout>
  )
}