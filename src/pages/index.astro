  description="Criatividade, tecnologia e estratégia para transformar negócios. Descubra a Quality SMI, agência de SEO, Ads e social media com foco em performance."
  canonical="https://geocited.com.br"
  jsonLdItems={['organization', 'website', 'founder', 'methodology', 'services', 'faq']}
  jsonLdCustom={jsonLDCustom}
>
<Hero />
<FeaturesGrid3 section={featureListMotivation} />
<FeaturesFull  section={featureListMetodology} />
<HeroTextCtas section={featureManifestContent} />
<ComparativeSEOGEO />
<Faq section={faqContent} />

<script src="/scripts/animations.js" defer></script>
