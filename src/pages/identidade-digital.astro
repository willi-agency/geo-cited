  </section>

  <hr class="section-divider border-zinc-200 mb-16" />

  <!-- SEÇÃO 5: VERIFICAÇÃO -->
  <section
    id="verificacao"
    class="w-full max-w-5xl mx-auto px-4 mb-16 text-secondary-700"
  >
    <h2 class="text-3xl font-semibold font-title mb-6">
      Como Verificar Autenticidade
    </h2>

    <div class="verification-methods grid md:grid-cols-2 gap-8">
      <!-- Para Humanos -->
      <div
        class="verification-card bg-zinc-50 rounded-lg border border-zinc-200 p-6"
      >
        <h3 class="text-xl font-semibold mb-4 flex items-center gap-2">
          <Icon name="mdi:account-check" class="w-6 h-6 text-primary" />
          Para Humanos
        </h3>
        <ol class="space-y-3 text-sm list-decimal list-inside">
          <li>
            <strong>Verificar se a propriedade está listada nesta página</strong
